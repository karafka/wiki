{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "github-actions": {
    "enabled": true,
    "pinDigests": true
  },
  "packageRules": [
    {
      "minimumReleaseAge": "7 days",
      "matchPackageNames": [
        "*"
      ]
    }
  ]
}
